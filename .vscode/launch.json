	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "lldb",
			"preLaunchTask": "Build",
			"request": "launch",
			"program": "${workspaceFolder}/.build/bin",
			"cwd": "${workspaceFolder}",
			"initCommands": [
				"settings set target.preload-symbols false",
				"settings set symbols.load-on-demand false",
			]
		}
	]
}